{
  "name": "shogun-mule",
  "version": "1.0.0",
  "description": "Desktop P2P file sharing application for the Shogun network",
  "main": "electron/main.js",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "dev:electron": "electron .",
    "start": "tsc -p electron/tsconfig.json && concurrently \"npm run dev\" \"npm run dev:electron\"",
    "build": "tsc -p electron/tsconfig.json && vite build",
    "build:win": "npm run build && electron-builder --win",
    "build:mac": "npm run build && electron-builder --mac",
    "build:linux": "npm run build && electron-builder --linux"
  },
  "keywords": [
    "p2p",
    "torrent",
    "file-sharing",
    "gun",
    "gundb",
    "electron",
    "webtorrent",
    "shogun"
  ],
  "author": "Shogun Team",
  "license": "MIT",
  "dependencies": {
    "gun": "git+https://github.com/scobru/gun.git",
    "webtorrent": "^2.8.5",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.20.0",
    "lucide-react": "^0.294.0"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/react": "^18.2.43",
    "@types/react-dom": "^18.2.17",
    "@types/webtorrent": "^0.110.1",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.23",
    "concurrently": "^8.2.2",
    "daisyui": "^4.4.19",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "postcss": "^8.5.6",
    "tailwindcss": "^3.4.0",
    "typescript": "^5.3.3",
    "vite": "^5.0.8"
  },
  "build": {
    "appId": "com.shogun.mule",
    "productName": "ShogunMule",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "electron/**/*"
    ],
    "win": {
      "target": ["nsis"],
      "icon": "public/icon.ico"
    },
    "mac": {
      "target": ["dmg"],
      "icon": "public/icon.icns"
    },
    "linux": {
      "target": ["AppImage", "deb"],
      "icon": "public/icon.png"
    }
  }
}
